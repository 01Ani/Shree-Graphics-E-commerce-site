<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/checkout.css" />

<h1 class="page-title">My Cart</h1>
<br /><br />
<% if(typeof cart!=="undefined"){ %>
<table class="table table-striped alignMiddle">
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Price</th>
    <th>Quantity</th>
    <th></th>
    <th>Subtotal</th>
  </tr>
  <% var total=0; %>
  <% cart.forEach(function(product) {%> 
  <% var sub=parseFloat(product.qty*product.price).toFixed(2) %>
  <% total += parseFloat(sub) %>
  <tr>
    <td><img src="<%=product.image%>" class="cpi" alt="" /></td>
    <td><%= product.name %></td>
    <td><%= product.price %></td>
    <td><%= product.qty %></td>
    <td>
      <a href="/cart/update/<%= product.name %>?action=add">+</a>&nbsp
      <a href="/cart/update/<%= product.name %>?action=remove"></a>&nbsp
      <a href="/cart/update/<%= product.name %>?action=clear">Clear</a>&nbsp
    </td>
    <td>$<%= sub %></td>
  </tr>
  <%}) %>
  <tr>
    <td colspan="6" align="right"><b>Total:</b>$<%= parseFloat(total).toFixed(2) %></td>
  </tr>
  <tr>
    <td colspan="5" align="right">
        <a class="btn btn-danger" href="/cart/clear">Clear cart</a>
    </td>
    <td colspan="5" align="right">
        <a class="btn btn-primary buyNow" href="#">Buy now</a>
    </td>
  </tr>
</table>
<%}else{ %>
<h3 class="text-center">Your cart is empty!</h3>
<% } %>

<footer>
  <a href="/products">Back to all products</a>
</footer>
