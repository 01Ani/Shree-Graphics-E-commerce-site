<% layout('layouts/boilerplate') %>

<div class="container text-center mt-5 py-3 ">
  <div class="row">
    <div class="col-lg-6">
      <img src="<%=product.image%>" class="img-fluid" alt="">
    </div>
    <div class="col-lg-6">
      <div class="card" >
        <div class="card-header">
          <h1><%= product.name %></h1>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= product.description %></li>
          <li class="list-group-item">Category: <%= product.category.name %></li>
          <li class="list-group-item">$<%= product.price %></li>
          <li class="list-group-item">In stock:<%= product.stock %></li>

        </ul>
      </div>
    </div>
    
  </div>
</div>

<p><a href="/products/<%= product._id %>/edit">Edit</a></p>
<p>
<form action="/products/<%= product._id %>?_method=DELETE" method="POST">
  <button>Delete</button>
</form>
</p>
<p>
  <a href="/cart/add/<%= product._id %>">Add to cart</a>
</p>
<footer>
  <a href="/products">Back to all products</a>
</footer>