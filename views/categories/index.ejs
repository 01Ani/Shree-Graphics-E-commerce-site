<% layout('layouts/boilerplate') %>

<h2 class="text-center mb-4">All categories</h2>

<div class="container text-center">
  <div class="row">
    <% for (let cat of category) {%>
    <div class="list">
      <div class="list-item">
        <a href="/categories/<%= cat._id %>"><%= cat.name %></a>
      </div>
    </div>
    <% } %>
  </div>
</div>

<footer>
  <a href="/categories/new">New Category</a>
</footer>
